version: "3.9"

x-db-credentials: &db_credentials
  POSTGRES_USER: ${POSTGRES_USER}
  POSTGRES_PASSWORD: ${POSTGRES_PASSWORD}
  POSTGRES_DB: ${POSTGRES_DB}
  POSTGRES_HOST: ${POSTGRES_HOST}
  POSTGRES_PORT: ${POSTGRES_PORT}

x-template_api_parser_service: &template_api_parser_service
  image: template_api_parser_service
  build:
    context: scrappers
    dockerfile: template_parser_api/Dockerfile
  depends_on:
    - db
  networks:
    - parser_network

networks:
  parser_network:
    driver: bridge

services:
  db:
    environment:
      <<: *db_credentials
    container_name: pg
    image: postgres
    restart: always
    volumes:
      - ./init.sql:/docker-entrypoint-initdb.d/init.sql
    ports:
      - "8080:5432"
    networks:
      - parser_network

  items:
    container_name: items-prices-parser
    build:
      context: scrappers
      dockerfile: items_prices_parser/Dockerfile
    environment:
      <<: *db_credentials
    depends_on:
      - db
      - seleniarm-hub
      - seleniarm-chrome-node
    networks:
      - parser_network

  dashboard:
    container_name: web-dashboard
    build:
      context: .
      dockerfile: ./app/Dockerfile
    environment:
      <<: *db_credentials
    depends_on:
      - db
    ports:
      - "5555:3000"
    networks:
      - parser_network
    volumes:
      - ./app/app/:/app/app/

  seleniarm-chrome-node:
    deploy:
      replicas: 1
    image: {{ "seleniarm/node-chromium:latest" if ansible_architecture == 'arm64' else "selenium/node-chrome:latest" }}
    volumes:
      - ./downloads:/home/seluser/Downloads
      - /dev/shm:/dev/shm
    depends_on:
      - seleniarm-hub
    environment:
      - SE_EVENT_BUS_HOST=seleniarm-hub
      - SE_EVENT_BUS_PUBLISH_PORT=4442
      - SE_EVENT_BUS_SUBSCRIBE_PORT=4443
    networks:
      - parser_network

  seleniarm-hub:
    image: {{ "seleniarm/hub:latest" if ansible_architecture == 'arm64' else "selenium/hub:latest" }}
    container_name: selenium-hub
    ports:
      - "4442:4442"
      - "4443:4443"
      - "4444:4444"
    networks:
      - parser_network

{% for market_type in market_types %}
{% for weapon_type in weapon_types %}
  {{ market_type.lower().replace('-', '_') }}_parser_{{ loop.index }}:
    <<: *template_api_parser_service
    container_name: {{ market_type }}-parser-node-{{ weapon_type.lower().replace(' ', '_') }}
    environment:
      <<: *db_credentials
      WEAPON_TYPE: {{ weapon_type }}
      MARKET_TYPE: {{ market_type }}

{% endfor %}
{% endfor %}